<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/http1_button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="原生方式"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/http1_button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Glide"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/http1_button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OkHttpClient-GET"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/http1_button4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OkHttpClient-POST"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/http1_button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OkHttpClient-png"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/http1_button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="流媒体-在线视频"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>




    <TextView
        android:id="@+id/http1_textView1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="文本信息"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/http1_imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
